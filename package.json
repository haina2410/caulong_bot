{
  "name": "caulong-bot",
  "version": "0.1.0",
  "description": "Facebook Messenger badminton meetup assistant bot",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "pnpm build && node dist/index.js",
    "login": "ts-node-dev --transpile-only --exit-child src/scripts/login.ts",
    "start:dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "db:reset": "ts-node-dev --transpile-only src/scripts/resetDatabase.ts",
    "db:seed": "ts-node-dev --transpile-only src/scripts/seedDatabase.ts"
  },
  "keywords": [
    "facebook",
    "messenger",
    "chatbot",
    "badminton",
    "kysely"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "facebook-chat-api": "link:packages/facebook-chat-api",
    "kysely": "^0.27.3",
    "luxon": "^3.5.0",
    "node-telegram-bot-api": "^0.65.1",
    "pg": "^8.11.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/luxon": "^3.3.6",
    "@types/node": "^20.16.5",
    "@types/node-telegram-bot-api": "^0.64.7",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  }
}
