# PostgreSQL connection string, e.g. postgres://user:password@localhost:5432/caulong_bot
DATABASE_URL=

# Set to true to enable SSL for Postgres connections (for managed services)
PGSSL=false

# Target platform: messenger (default), discord, or telegram
PLATFORM=messenger

# facebook-chat-api login credentials:
# Run `pnpm run login` to generate the appState file; keep email/password only for that flow.
FB_EMAIL=
FB_PASSWORD=
FB_APPSTATE_PATH=

# Telegram bot token (required when PLATFORM=telegram)
TELEGRAM_TOKEN=

# Discord bot token (required when PLATFORM=discord)
DISCORD_TOKEN=
